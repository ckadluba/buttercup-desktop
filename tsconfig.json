{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "outDir": "./build",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": [
        "./source/main/**/*",
        "./source/shared/**/*"
    ],
    "exclude": [
        "build",
        "dist",
        "node_modules"
    ]
}
